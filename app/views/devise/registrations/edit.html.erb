<%= render 'shared/page_title', title: "edit user" %>

<%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
  
    <div class="form-group">
        <div class="control-label col-md-2 offset-md-4">
          <%= f.label :name %><br />
        </div>
        <div class="col-md-4 offset-md-4">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2 offset-md-4">
          <%= f.label :username %><br />
        </div>
        <div class="col-md-4 offset-md-4">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2 offset-md-4">
          <%= f.label :email %><br />
        </div>
        <div class="col-md-4 offset-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2 offset-md-4">
          <%= f.label :password %><br />
        </div>
        <div class="col-md-4 offset-md-4">
          <%= f.password_field :password, autocomplete: "password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2 offset-md-4">
          <%= f.label :password_confirmation %><br />
        </div>
        <div class="col-md-4 offset-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "password confirmation", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-3 offset-md-4">
          <%= f.submit "Update", class: "btn ml-1 btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
<% end %>

<div class="col-md-3 offset-md-4">
<h3>Cancel my account</h3>
</div>
<div class="col-md-3 offset-md-4">
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "badge badge-danger" %></p>
</div>

<%= link_to "Back", root_path %>
