<%= simple_form_for(@phrase) do |f| %>
  <%= f.error_notification %>

        <%= f.input :body, label: "Today favorite phrase", 
        input_html: { class: "textarea" }, wrapper: false, 
        label_html: { class: "label" },
        placeholder: "Add your new favorite phrase...", autofocus: true %>

        <%= f.button :submit, class: "button is-info" %>

<% end %>