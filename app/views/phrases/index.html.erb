<%= render 'shared/page_title', title: "Faphra App" %>
<h4 class="text-center text-secondary">A place to share your Favorite Phrases</h4>

<div class="container-fluid">
<div>
	<p class="mt-5"></p>
</div>

<% if user_signed_in? %>
	<div class="row">
	  <div class="col-sm-3">	
		<%= render 'profile' %>
	  </div>

	  <div class="col-sm-6">	
		<%= render 'user_feed' %>
	  </div>

	  <div class="col-sm-3">	
		<%= render 'friendships/who_to_follow' %>
	  </div>
	</div>

	<nav aria-label="Page navigation example">
	<div class="container pagination justify-content-center" >
  		<%= paginate @phrases %>
	</div>
	</nav>

<% else %>
	<div class="row">
	  <div class="col-sm-8">	
		<%= render 'feed' %>
	  </div>

	  <div class="col-sm-4">	
		<%= render 'trends' %>
	  </div>
	</div>

	<nav aria-label="Page navigation example">
	<div class="container pagination justify-content-center" >
  		<%= paginate @phrases %>
	</div>
	</nav>

<% end %>
</div>