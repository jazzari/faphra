<div class="row mb-2">				

	<div class="col">
		<div class="card-block bg-light rounded-pill pl-3">
		  <h6 class="card-title">
  			<%= comment.user.username %>
  		  </h6>
  		  <div class="card-text font-weight-lighter">
  			<%= comment.content %>
  		  </div>
		</div>
	</div>

	<div class="col-1">
		<% if comment.user == current_user %>
  		  	<%= link_to "", phrase_comment_path(phrase, comment),
  		  	  	method: :delete, data: { confirm: "Are you sure? " },
  		  	  	class: "fa fa-close" %>
  		 <% end %>
	</div>


</div>